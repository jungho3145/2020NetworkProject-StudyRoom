        <div id="inner">
          <img src="images/user.png" />
        </div>
        <p id="center"><%= Using.usingRoom %></p>
        <button id="returnBtn">반납</button>
      </div>
      <% } %>
    </div>
    <div id="using">
      <h2 id="num2">예약 대기중인 실</h2>
